	if (strlen($speicher) > 0) { $text .= '.'; }

	$text .= '<br><br>Entschlossen wirfst du die Würfel. Sie zeigen die Augenzahlen: ' . implode(', ', str_split($wurf)) . '<br>';

	if ((strlen($speicher) == 0) && (strpos($auswahl_copy, '6') !== false))
