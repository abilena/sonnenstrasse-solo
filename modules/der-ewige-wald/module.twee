function replace_roll($string, $roll)
{
	$pos = strpos($string, $roll);
	if ($pos !== false) {
		return substr_replace($string, '', $pos, 1);
	}
	return $string;
}

function perform_roll()
{
	global $vars;
	$runde = @$vars['Spiel_Runde'] + 1;
	$speicher = @$vars['Spiel_Speicher'];

	$wurf = '';
	$wurf .= (strlen($speicher) < 5) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 4) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 3) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 2) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 1) ? chr(random_int(1, 6) + 48) : '';
	$array = str_split($wurf);
	rsort($array);
	$wurf = implode('', $array);
	$wurf_copy = $wurf;
	$auswahl = '';
	
	if ((strlen($speicher) == 0) && (strpos($wurf_copy, '6') !== false))
	{
		$auswahl .= '6';
		$speicher .= '6';
		$wurf_copy = replace_roll($wurf_copy, '6');
	}
	if ((strlen($speicher) == 1) && (strpos($wurf_copy, '5') !== false))
	{
		$auswahl .= '5';
		$speicher .= '5';
		$wurf_copy = replace_roll($wurf_copy, '5');
	}
	if ((strlen($speicher) == 2) && (strpos($wurf_copy, '4') !== false))
	{
		$auswahl .= '4';
		$speicher .= '4';
		$wurf_copy = replace_roll($wurf_copy, '4');
	}

	if (strlen($speicher) >= 3)
	{
		$auswahl .= $wurf_copy;
	}

	$vars['Spiel_Runde'] = $runde;
	$vars['Spiel_Wurf'] = $wurf;
	$vars['Spiel_Auswahl'] = $auswahl;

	return $wurf;
}

