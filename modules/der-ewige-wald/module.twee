{
	$pos = strpos($string, $roll);
	if ($pos !== false) {
		return substr_replace($string, '', $pos, 1);
	}
	return $string;
}

function perform_roll($speicher)
{
	if (strlen($speicher) == 5)
		return $speicher;

	$wurf = '';
	$wurf .= (strlen($speicher) < 5) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 4) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 3) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 2) ? chr(random_int(1, 6) + 48) : '';
	$wurf .= (strlen($speicher) < 1) ? chr(random_int(1, 6) + 48) : '';
	$array = str_split($wurf);
	rsort($array);
	$wurf = implode('', $array);
	
	if ((strlen($speicher) == 0) && (strpos($wurf, '6') !== false))
	{
		$speicher .= '6';
		$wurf = replace_roll($wurf, '6');
	}
	if ((strlen($speicher) == 1) && (strpos($wurf, '5') !== false))
	{
		$speicher .= '5';
		$wurf = replace_roll($wurf, '5');
	}
	if ((strlen($speicher) == 2) && (strpos($wurf, '4') !== false))
	{
		$speicher .= '4';
		$wurf = replace_roll($wurf, '4');
	}

	if (strlen($speicher) >= 3)
	{
		$speicher .= $wurf;
	}

	return $speicher;
}

function calculate_ladung($speicher)
{
	if (strlen($speicher <= 3))
		return 0;
	else if (strlen($speicher) == 4)
		return min((ord($speicher[3]) - 48), random_int(1,6) + random_int(1,6));
	else if (strlen($speicher) == 5)
		return min(((ord($speicher[3]) - 48) + (ord($speicher[4]) - 48)), random_int(1,6) + random_int(1,6));
	else
		return 0;
}


